@model RegisterViewModel

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container">
    <form method="post">
        <label>Name</label>
        <input type="text" asp-for="Name" class="form-control" style="border:1px solid #222" />
        <br />
        <label>Surname</label>
        <input type="text" asp-for="Surname" class="form-control" style="border:1px solid #222" />
        <br />
        <label>City</label>
        <input type="text" asp-for="City" class="form-control" style="border:1px solid #222" />
        <br />
        <label>Birtday</label>
        <input type="text" asp-for="BirthDay" class="form-control" style="border:1px solid #222" />
        <br />
        <label>UserName</label>
        <input type="text" asp-for="UserName" class="form-control" style="border:1px solid #222" />
        <br />
        <label>Email</label>
        <input type="text" asp-for="Email" class="form-control" style="border:1px solid #222" />
        <br />
        <label>Password</label>
        <input type="text" asp-for="Password" class="form-control" style="border:1px solid #222" />
        <br />
        <button class="btn btn-outline-primary">Kaydet</button>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    </form>
</div>