@model List<CityTravelProject.PresentationLayer.Dtos.ContactDtos.ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="container">
    <br />
    <h3>
        <a href="javascript:void();"><i class="zmdi zmdi-slideshare"></i> <span> Lokasyon </span></a>
    </h3>
    <br />
    <div style="height: 535px; overflow-x: hidden; overflow-y: scroll;">
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Subject</th>
                <th>Email</th>
                <th>Message</th>
                <th>Status</th>
                <th>Güncelle</th>
            </tr>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <th>@item.Name</th>
                    <th>@item.Subject</th>
                    <th>@item.Email</th>
                    <th><i class="fas fa-envelope-open-text" onclick="showMessageModal('@item.Message')"></i></th>
                    <th>@item.Status</th>
                    <th><a href="/AdminContact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></th>
                </tr>
            }
        </table>
    </div>
</div>

<div id="message-modal" class="modal" onclick="closeModal(event)">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <p id="modal-message"></p>
    </div>
</div>

<style>
    .modal-content p{
        color:#111;
    }
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0, 0, 0);
        background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 500px;
        text-align: center;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<script>
    function showMessageModal(message) {
        var modal = document.getElementById("message-modal");
        var modalMessage = document.getElementById("modal-message");

        modal.style.display = "block";
        modalMessage.innerHTML = message;
    }

    function closeModal(event) {
        var modal = document.getElementById("message-modal");
        if (event.target === modal || event.target.className === 'close') {
            modal.style.display = "none";
        }
    }
</script>



