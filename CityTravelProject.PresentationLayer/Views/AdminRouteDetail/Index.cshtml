@model List<CityTravelProject.PresentationLayer.Dtos.RouteDetailDtos.ResultRouteDetailDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <br />
    <h3>
        <a href="javascript:void();"><i class="zmdi zmdi-slideshare"></i> <span> Rota </span></a>
    </h3>
    <br />
    <div style="height: 535px; overflow-x: hidden; overflow-y: scroll;">
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Rota ID</th>
                <th>Lokasyon ID</th>
                <th>Sıra</th>
                <th>Durum</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <th>@item.RoutesID</th>
                    <th>@item.LocationID</th>
                    <th>@item.Order</th>
                    <th>@item.Status</th>
                    <th><a href="/AdminRouteDetail/DeleteRouteDetail/@item.RouteDetailID" class="btn btn-outline-danger">Sil</a></th>
                    <th><a href="/AdminRouteDetail/UpdateRouteDetail/@item.RouteDetailID" class="btn btn-outline-success">Güncelle</a></th>
                </tr>
            }
        </table>
        <a href="/AdminRouteDetail/AddRouteDetail" class="btn btn-outline-primary">Rota Ekle</a><br />
    </div>
</div>